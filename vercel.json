{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/src/app.js",
      "methods": ["GET", "POST"],
      "headers": {
        "Access-Control-Allow-Origin": "https://your-frontend.vercel.app",
        "Access-Control-Allow-Methods": "GET, POST",
        "Access-Control-Allow-Headers": "X-CSRF-Token, Content-Type"
      }
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "NODE_VERSION": "18"
  },
  "functions": {
    "backend/src/app.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  }
}