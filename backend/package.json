{
  "name": "psn-backend",
  "version": "1.0.0",
  "description": "Backend API para dados PSN com cache e enriquecimento de dados",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node -r dotenv/config --env-file=.env src/server.js",
    "dev": "nodemon -r dotenv/config --env-file=.env src/server.js",
    "dev:debug": "nodemon -r dotenv/config --inspect --env-file=.env src/server.js",
    "debug:token": "node -r dotenv/config scripts/debug-token.js",
    "test": "NODE_ENV=test jest -r dotenv/config",
    "test:watch": "NODE_ENV=test jest -r dotenv/config --watch",
    "test:coverage": "NODE_ENV=test jest -r dotenv/config --coverage",
    "test:debug": "NODE_ENV=test node -r dotenv/config --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "docker:build": "docker build -t psn-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env psn-backend",
    "docker:dev": "docker-compose up --build",
    "healthcheck": "node -r dotenv/config scripts/healthcheck.js",
    "token:status": "node -r dotenv/config scripts/check-token-status.js",
    "verify:npsso": "node -r dotenv/config scripts/verify-npsso.js",
    "diagnose:psn": "node -r dotenv/config scripts/diagnose-psn.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "redis": "^4.6.10",
    "axios": "^1.6.2",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "express-rate-limit": "^7.1.5",
    "express-pino-logger": "^7.0.0",
    "node-cron": "^3.0.3",
    "psn-api": "^2.16.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@types/jest": "^29.5.8"
  },
  "keywords": [
    "psn",
    "playstation",
    "api",
    "cache",
    "redis",
    "gaming",
    "npsso",
    "authentication"
  ],
  "author": "Seu Nome",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "seu-repositorio"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["./tests/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "coverageDirectory": "coverage",
    "verbose": true,
    "transform": {},
    "extensionsToTreatAsEsm": [".js"]
  }
}